<?php $pricingHelper = $this->helper('Magento\Framework\Pricing\Helper\Data'); ?>
<table class="product-shipping-table">
    <?php foreach ($this->getRates() as $code => $rates): ?>
        <?php foreach ($rates as $_rate): ?>
            <?php if ($_rate->getErrorMessage()): ?>
                <tr>
                    <td class="message error"><?php echo $_rate->getErrorMessage(); ?></td>
                    <td> </td>
                </tr>
            <?php else: ?>
                <tr>
                    <td><?php echo $_rate->getMethodTitle(); ?></td>
                    <td><?php echo $pricingHelper->currency($_rate->getPrice()); ?></td>
                </tr>
            <?php endif; ?>
        <?php endforeach; ?>
    <?php endforeach; ?>
</table>

